<div class="d-flex align-items-center py-4 mt-5">
  <div class="form-signin w-50 m-auto">
    <h2 style="font-family: 'Krona One'; color: #25316d; font-size: 25px; text-align: center">Nouvelle annonce</h2>

    <%= simple_form_for(@flat) do |f|%>
      <div class="form-input">
          <%= f.input :name, label: "Titre de l'annonce" %>
          <%= f.input :location, label: "Adresse" %>
          <%= f.input :description %>
          <%= f.input :price_per_month, label: "Loyer par mois" %>
          <%= f.input :autonomy_level, label: "Niveau d'autonomie" %>
          <%= f.input :pictures, label: "Photos (mettre les URLs, jusqu'Ã  5)" %>
      </div>

      <div class="form-action">
