  <%# <%= render "form", flat: @flat %>

<div class="d-flex align-items-center py-4 mt-5">
  <div class="form-signin w-50 m-auto">
    <h2 style="font-family: 'Krona One'; color: #25316d; font-size: 25px; text-align: center">New flat</h2>

    <%= simple_form_for(@flat) do |f|%>
      <div class="form-input">
          <%= f.input :name %>
          <%= f.input :location %>
          <%= f.input :description %>
          <%= f.input :price_per_month %>
          <%= f.input :autonomy_level %>
          <%= f.input :pictures, label: "Pictures (insert URLs, up to 5)" %>
      </div>

      <div class="form-action">
        <%= f.button :submit, "Create flat", class: 'btn-dark w-100 py-2 mb-2 mt-2' %>
      </div>
    <% end %>

  </div>
</div>
