<div class="title-conteneur">
  <h2>Résultats pour Nice :</h2>
</div>
<% @flats.each_with_index do |flat, index| %>
  <div class="big-box">
    <a href="<%=flat_path(flat)%>" class= "text-decoration-none">
      <div class="conteneur-card">
        <%if index % 2 == 0 %>
          <div class="flat-card">
            <div class="top-card">
              <div class="flat-profile">
                <img class="avatar" src="<%=flat.user.avatar_url%>">
                <p><%=flat.user.first_name%> <%=flat.user.last_name[0]%>.</p>
              </div>
              <div class="flat-locality">
                <i class="fa-solid fa-location-pin" style="color: #25316d;"></i>
                <p><%=flat.location%></p>
              </div>
            </div>
            <div class="flat-picture" style='background-image: url(<%= flat.pictures %>);'>
            </div>
            <div class="flat-icons-price">
              <div class="card-icons">

                  <%= link_to flat_favorites_path(flat), data: {turbo_method: :post} do %>
                  <i class="fa-regular fa-heart fa-xl" style="color: #25316d;"></i>
                <% end %>

                <i class="fa-solid fa-pen-to-square fa-xl" style="color: #25316d;"></i>
                <i class="fa-regular fa-message fa-xl" style="color: #25316d;"></i>
              </div>
              <div class="flat-price">
                <p><strong><%=flat.price_per_month%>€/mois</strong></p>
              </div>
            </div>
          </div>
          <div class="flat-descr">
            <h2><%=flat.name%></h2>
            <p><%=flat.description%></p>
            <h4>Autonomie : <%=flat.autonomy_level%>/5</h4>
          </div>
        <% else %>
          <div class="flat-descr">
            <h2><%=flat.name%></h2>
            <p><%=flat.description%></p>
            <h4>Autonomie : <%=flat.autonomy_level%>/5</h4>
          </div>
          <div class="flat-card">
            <div class="top-card">
              <div class="flat-profile">
                <img class="avatar" src="<%=flat.user.avatar_url%>">
                <p><%=flat.user.first_name%> <%=flat.user.last_name[0]%>.</p>
              </div>
              <div class="flat-locality">
                <i class="fa-solid fa-location-pin" style="color: #25316d;"></i>
                <p><%=flat.location%></p>
              </div>
            </div>
            <div class="flat-picture" style='background-image: url(<%= flat.pictures %>);'>
            </div>
            <div class="flat-icons-price">
              <div class="card-icons">
                <%= link_to flat_favorites_path(flat), data: {turbo_method: :post} do %>
                  <i class="fa-regular fa-heart fa-xl" style="color: #25316d;"></i>
                <% end %>
                <i class="fa-solid fa-pen-to-square fa-xl" style="color: #25316d;"></i>
                <i class="fa-regular fa-message fa-xl" style="color: #25316d;"></i>
              </div>
              <div class="flat-price">
                <p><strong><%=flat.price_per_month%>€/month</strong></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </a>
    <div class="bordure">
    </div>
  </div>
<% end %>
