

<% if @favorites.empty? %>
<div class="container d-flex flex-column justify-content-center align-items-center mt-5", style="width: 100%; height= 100%">
  <div class="card mb-3" style="width: 1040px; border-radius: 20px; background-color: #EAF1F7">
    <div class="card-body d-flex flex-column align-items-center">
      <h5 class="card-title mb-3" style="">Vous n'avez pas encore de favoris.</h5>
      <button class="btn btn-dark"><%= link_to "Revenir Ã  l'index", flats_path, class: "text-decoration-none text-white"%></button>
    </div>
  </div>
</div>
<% else %>
<% @favorites.each do |favorite| %>
<div class="container d-flex flex-column justify-content-center align-items-center mt-5", style="width: 100%; height= 100%">
  <h1 class="mb-5" style="font-family: 'Krona One'; color: #25316D; ">Mes favoris :</h1>
  <div class="card mb-3" style="width: 1040px; border-radius: 20px; background-color: #EAF1F7">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="<%= favorite.flat.pictures.split(" ")[0] %>" class="card-img w-100 h-100" style="border-radius: 20px 0 0 20px;" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title" style="font-family: 'Krona One'; color: #25316D; font-size: 20px;"><%= link_to favorite.flat.name, flat_path(favorite.flat.id), class:"card-title text-decoration-none" %></h5>
          <p class="card-text"><%= favorite.flat.description %></p>
          <p class="card-text"><small class="text-muted"><%= favorite.flat.location %></small></p>
          <%= link_to favorite_path(favorite), data: {turbo_method: :delete}, class: "text-decoration-none" do %>
          <i class="fa-solid fa-trash fa-lg" style="color: red;"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>
