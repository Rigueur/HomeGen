
<% @favorites.each do |favorite| %>
  <div>
    <h2><%= favorite.flat.name %></h2>
    <p><%= favorite.flat.description %></p>
    <p><%= favorite.flat.location %></p>
    <p><%= favorite.flat.pictures %></p>
    <%= link_to favorite_path(favorite), data: {turbo_method: :delete}, class: "text-decoration-none" do %>
      <i class="fa-solid fa-trash" style="color: #25316d;"></i>
    <% end %>
  </div>
<% end %>
