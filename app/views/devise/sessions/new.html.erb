<div class="d-flex align-items-center py-4 mt-5">
  <div class="form-signin w-25 m-auto">
    <h2 style="font-family: 'Krona One'; color: #25316d; font-size: 25px; text-align: center">Se connecter</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        label: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "mot de passe" } %>
        <%= f.input :remember_me,
        label: "Se souvenir de moi",
        as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: 'btn-primary w-100 py-2 mb-2' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
