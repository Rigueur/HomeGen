<h2>Modifier <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>En attente de confirmation pour: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
    label: "Mot de passe",
                hint: "Ne pas remplir si vous ne souhaitez pas changer votre mot de passe",
                required: false,
                input_html: { autocomplete: "nouveau mot de passe" } %>
    <%= f.input :password_confirmation,
    label: "Confirmation du mot de passe",
                required: false,
                input_html: { autocomplete: "nouveau mot de passe" } %>
    <%= f.input :first_name,
    label: "Prénom",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "prénom" }%>
    <%= f.input :last_name,
    label: "Nom de famille",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "nom de famille" }%>
    <%= f.input :age,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "age" }%>
    <%= f.input :skills,
    label: "Compétences",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "compétences" }%>
    <%= f.input :biography,
    label: "Biographie",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "biographie" }%>
    <%= f.input :current_password,
    label: "Mot de passe actuel",
                hint: "Mot de passe requis pour mettre à jour votre compte",
                required: true,
                input_html: { autocomplete: "Mot de passe actuel" } %>
  </div>

<div class="form-actions mb-3">
  <%= f.submit "Mettre à jour", class: 'btn btn-outline-primary' %>
</div>

<div class="mb-3">
  <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr?", turbo_confirm: "Etes-vous sûr?" }, method: :delete %>
</div>

<%= link_to "Revenir", :back %>
<% end %>
