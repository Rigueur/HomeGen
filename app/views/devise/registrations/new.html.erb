<div class="d-flex align-items-center py-4 mt-5 mb-5">
  <div class="form-signin w-25 m-auto">
    <h2 style="font-family: 'Krona One'; color: #25316d; font-size: 25px; text-align: center">S'inscrire</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
          label: "Mot de Passe",
                      required: true,
                      hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
          label: "Confirmation du Mot de Passe",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :first_name,
          label: "Prénom",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "first-name" }%>
          <%= f.input :last_name,
          label: "Nom de Famille",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "last-name" }%>
          <%= f.input :age,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "age" }%>
          <%= f.input :skills,
          label: "Compétences",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "skills" }%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "S'inscrire", class: 'btn-primary w-100 py-2 mb-3 mt-2' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
