<div class="nav-conteneur sticky-top">
  <div class="nav-conteneur-items">
    <div class="nav-items-brand">
      <a href="<%=flats_path%>" class= "text-decoration-none">
      <img src="https://i.imgur.com/XQg5y9o.png" alt="HomeGen Logo" width="130px">
      </a>
    </div>
    <div class="nav-items-search">
      <div class="search-bar">
        <div class="where-search">
          <%= form_with url: flats_path, method: :get, class: "d-flex h-100" do %>
            <%= text_field_tag :query,
                params[:query],
                class: "where-search",
                style: "height: 100%; width: 100%; border: none; padding-left: 10px;",
                placeholder: "Paris, Marseille, Nice..."
              %>
          </div>
          <div class="when-search">
            <%= text_field_tag :start_date,
                params[:start_date],
                class: "when-search",
                style: "height: 100%; width: 100%; border: none; padding-left: 10px;",
                placeholder: "Du...",
                data: {controller: "datepicker"}
              %>
          </div>
          <div class="when-search">
            <%= text_field_tag :end_date,
                  params[:end_date],
                  class: "when-search",
                  style: "height: 100%; width: 100%; border: none; padding-left: 10px;",
                  placeholder: "Au...",
                  data: {controller: "datepicker"}
                %>
          </div>
        <div class="search-icon">
          <%= button_tag(class: "btn") do %>
            <i class="fa-solid fa-magnifying-glass fa-xl" style="color: #25316d;"></i>
          <% end %>
        <% end %>
        </div>
      </div>
      <i class="fa-solid fa-sliders fa-xl" style="color: #25316d;"></i>
    </div>
    <div class="nav-items-icons">
      <%= link_to current_user ? user_favorites_path(current_user) : new_user_session_path do %>
        <i class="fa-regular fa-heart fa-xl" style="color: #25316d;"></i>
      <% end %>
      <div class="dropdown">
        <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="fa-solid fa-user fa-xl" style="color: #25316d;"></i>
        </a>
        <ul class="dropdown-menu">
          <% if current_user %>
            <%if current_user.old %>
              <li><a class="dropdown-item" href="<%= user_user_flats_path(current_user) %>">Mon Annonce</a></li>
            <%else%>
              <li><a class="dropdown-item" href="<%= user_bookings_path(current_user) %>">Mes Réservations</a></li>
            <%end%>
            <li><a class="dropdown-item" href="<%= user_path(current_user) %>">Mon Profil</a></li>
            <li><a class="dropdown-item" href="<%= destroy_user_session_path %>" data-turbo-method="delete">Déconnexion</a></li>
          <%else%>
            <li><a class="dropdown-item" href="<%=new_user_session_path%>">Se connecter</a></li>
            <li><a class="dropdown-item" href="<%=new_user_registration_path%>">S'inscrire</a></li>
          <%end%>
        </ul>
      </div>

    </div>
  </div>
</div>
